{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

  "compilerOptions": {
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "node_modules/phaser/types"]
  },
  

  "references": [
    { "path": "../types" }
  ]
}
