{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

  "compilerOptions": {
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "paths": {
      "@Type/*": [ "../types" ],
    },
  },
  

  "references": [
    { "path": "../types" }
  ]
}
